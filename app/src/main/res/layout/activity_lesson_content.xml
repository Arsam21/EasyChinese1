<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".animalContent"
    android:background="@drawable/lessan_content_background">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="0%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewName"
        android:textAlignment="center"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageButtonNext"
        android:background="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="next" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageButtonPrevious"
        android:background="@drawable/previous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="previous" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="7%"
        app:layout_heightPercent="13%"
        app:layout_marginLeftPercent="70%"
        app:layout_marginTopPercent="0%"
        android:id="@+id/buttonImage"
        android:layout_marginTop="72dp"
        android:background="@drawable/image"
        android:onClick="imageClicked" />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="7%"
        app:layout_heightPercent="13%"
        app:layout_marginLeftPercent="85%"
        app:layout_marginTopPercent="0%"
        android:id="@+id/buttonDescription"
        android:layout_marginTop="72dp"
        android:background="@drawable/description"
        android:onClick="desClicked" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="60%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="15%"
        android:id="@+id/imageViewImage"
        />
    <VideoView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="60%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="15%"
        android:id="@+id/imageViewPinyin"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="60%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="15%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/white"
        android:id="@+id/textViewDescription"
        android:scrollbars = "vertical"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="80%"
        android:id="@+id/buttonPlay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sound"
        android:onClick="playSound" />

</android.support.percent.PercentRelativeLayout>

