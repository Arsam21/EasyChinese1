<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mad.easychinese.game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/answer5"
        android:layout_toEndOf="@+id/answer5" />

    <GridView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/gridViewLife"
        android:numColumns="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTotalMark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/answer3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_blue"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="checkAnswer" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/answer4"
        android:layout_alignTop="@+id/answer3"
        android:layout_toRightOf="@+id/answer3"
        android:layout_toEndOf="@+id/answer3"
        android:background="@drawable/round_button_green"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:onClick="checkAnswer" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/answer5"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/answer4"
        android:layout_toEndOf="@+id/answer4"
        android:background="@drawable/round_button_grey"
        android:textColor="@color/white"
        android:onClick="checkAnswer" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/answer2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/answer3"
        android:layout_toStartOf="@+id/answer3"
        android:background="@drawable/round_button_red"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:onClick="checkAnswer" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/answer1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/answer2"
        android:layout_toStartOf="@+id/answer2"
        android:background="@drawable/round_button_yellow"
        android:textColor="@color/white"
        android:onClick="checkAnswer" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gridViewLife"
        android:layout_above="@+id/answer3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/imagePIC"
            android:background="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/textviewQuestion"
            android:background="@color/white"
            android:scrollbars = "vertical"
            android:textSize="22dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewQuestionLeft"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/answer5"
        android:layout_toStartOf="@+id/answer5" />


</RelativeLayout>
